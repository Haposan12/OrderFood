@model PesanMakanan.Models.Pesanan

@{
    ViewBag.Title = "Pesan";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<h2>Detail Pesanan</h2>

<div class="col-md-4">
    <img src="~/Content/Images/gambar/@ViewBag.gambar" style="width:300px;margin-top:50px" />
    <br /><br />
    <div style="margin-left:50px">
        <label>Nama Makanan :</label>
        <text>@ViewBag.namaMakanan</text>
    </div>

    <div style="margin-left:50px">
        <label>Nama Toko :</label>
        <text>@ViewBag.toko</text>
    </div>

    <div style="margin-left:50px">
        <label>Harga Makanan :</label>
        <text>Rp @ViewBag.harga,-</text>
    </div>

</div>

<div class="col-md-8">
    @using (Html.BeginForm("Pesan", "Toko", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.IDMakanan, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDMakanan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = ViewBag.idMakanan } })
                    @Html.ValidationMessageFor(model => model.IDMakanan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IDToko, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDToko, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = ViewBag.idToko } })
                    @Html.ValidationMessageFor(model => model.IDToko, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IDUser, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDUser, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = Session["userID"] } })
                    @Html.ValidationMessageFor(model => model.IDUser, "", new { @class = "text-danger" })
                </div>
            </div>

            
            <div class="form-group">
                @Html.LabelFor(model => model.Jumlah, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Jumlah, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Jumlah, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TotalHarga, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotalHarga, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TotalHarga, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pesan" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

</div>



@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '') {
                alertify.success(successMessage);
            }
        });

        $(document).ready(function () {
            $("input[name='Jumlah']").on('change', function () {
                var x = $(this).val();
                $("input[name='TotalHarga']").val(x * @ViewBag.harga);
            });
        });
    </script>
}